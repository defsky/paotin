#function {filter} {
    #local table {%1};
    #local cond {%2};

    #replace {cond} {KEY} {$$key};
    #replace {cond} {VALUE} {$$value};

    #local newTable {};
    #local key {};
    #foreach {*table[]} {key} {
        #local value {$table[$key]};
        #line sub var #if { $cond } {
            #cat newTable {{$key}{$value}};
        };
    };

    #return {$newTable}
};

